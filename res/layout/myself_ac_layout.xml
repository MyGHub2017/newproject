<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/lin_popup_show"
              >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/blue"
            >
            <ImageView
                android:id="@+id/img_myself_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_return_bar_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的资料"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/all_theme_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="头像"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_content_size" />
                <com.mcz.fisheries_instituteproject.view.RoundAngleImageView
                    android:id="@+id/img_userhead"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_touxiang_open"
                    android:background="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    app:roundWidth="20.0dp"
                    app:roundHeight="20.0dp"
                    />

                <ImageView
                    android:id="@+id/img_touxiang_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_arrows_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="呢称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_content_size" />
                <TextView
                    android:id="@+id/txt_nichen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="你好明天"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_ninchen_open"
                    />
                <ImageView
                    android:id="@+id/img_ninchen_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_arrows_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="账号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_content_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="123qwer@163.com"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_zhanghao_open"
                    />
                <ImageView
                    android:id="@+id/img_zhanghao_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_arrows_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_content_size" />
                <TextView
                    android:id="@+id/txt_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_xingbie_open"
                    />
                <ImageView
                    android:id="@+id/img_xingbie_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_arrows_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_updatepwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="修改密码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_content_size" />
                <!--<TextView-->
                    <!--android:layout_width="200dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:text="说不想爱别说慌久一点喜欢说不想恨别纠缠别装作感叹 "-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_toLeftOf="@+id/img_gexing_open"-->
                    <!--/>-->
                <ImageView
                    android:id="@+id/img_gexing_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_arrows_normal" />
            </RelativeLayout>
        </LinearLayout>



</LinearLayout>